.games-list
  %h1 List of Games
  %ul
    - @games.each do |game|
      .game-listing
        .stats
          %h3= link_to "#{game.name}", game
          %img{ src: "http:"+game.image_url }
          %p= "Time to Play: #{game.play_time} minutes"
          %p= "Players: #{game.min_players} - #{game.max_players}"
          %p= "Published: #{game.year_published}"
        .description-text
          %h4.description-title Description
          %p= game.description
        %p.read-more= link_to "Read more about this game!", game